<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/background">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="257dp"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="161dp"
                android:id="@+id/listenButton" android:layout_weight="0.18"
                android:background="@drawable/blank"               android:onClick="onListenButtonClick"
                android:layout_gravity="center_horizontal|top" android:src="@drawable/listen" android:clickable="true"
                android:focusableInTouchMode="false" android:maxHeight="200dp" android:maxWidth="200dp"
                android:minHeight="100dp" android:minWidth="100dp"/>
    </LinearLayout>
</RelativeLayout>